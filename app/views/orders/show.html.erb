<%= render @order %>

<div class="btn-group" role="group" >
  <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-primary mx-1" %> 
  <%= link_to "Back to orders", orders_path, class: "btn btn-outline-primary mx-1" %>
  
  <%= button_to "Delete this order", @order, method: :delete, data: { turbo_confirm: "Please confirm the deletion"}, class: "btn btn-danger mx-1" %>
</div>