<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<h2>Customer's information</h2>
<%= render @customer %>

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer) %> |
  <%= link_to "Back to customers", customers_path %>

  <%= button_to "Destroy this customer", @customer, method: :delete %>
</div>

<% if @customer.orders.present? %>
  <h2>Customer's orders</h2>
  <table>
    <thead>
    <tr>
      <th>Order Id</th>
      <th>Product Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <% @customer.orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.product_name %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= button_to "Destroy", order, method: :delete, data: { turbo_confirm: "Please confirm the deletion"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>