<h2>Customer</h2>
<%= render @customer %>

<div class="btn-group" role="group" aria-label="Customer Actions">
  <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-primary mx-1" %> 
  <%= link_to "Back to customers", customers_path, class: "btn btn-outline-primary mx-1" %> 
  <%= button_to "Delete this customer", @customer, method: :delete, data: { turbo_confirm: "Please confirm the deletion"}, class: "btn btn-danger mx-1" %>
</div>

<% if @customer.orders.present? %>
  <h3>Customer's orders</h3>
  <div class="container mx-1">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Order Id</th>
        <th>Product Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% @customer.orders.each do |order| %>
          <tr>
            <td><%= icon('fa-solid', 'shopping-cart') %></td>
            <td><%= order.id %></td>
            <td><%= order.product_name %></td>
            <td><%= link_to 'Show', order, class: "btn btn-outline-secondary mx-1" %></td>
            <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-outline-secondary mx-1" %></td>
            <td><%= button_to 'Delete', order, method: :delete, data: { turbo_confirm: "Please confirm the deletion"}, class: "btn btn-outline-danger mx-1" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>